rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
        (request.auth.token.email == 'rozsagyenelaw@yahoo.com' ||
         request.auth.token.email == 'rozsagyenelaw1@gmail.com');
    }

    // Intake documents - users can only access their own uploads
    match /intake/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // Case documents - users can only access their own case documents
    match /cases/{caseId}/documents/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated() || isAdmin();
    }

    // Documents collection - for financial docs upload (asset discovery)
    match /documents/{caseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // Signature request documents - admin can upload, public can read for signing
    match /signature-requests/{allPaths=**} {
      allow read: if true;  // Public access for signing page
      allow write: if isAdmin();
      allow delete: if isAdmin();
    }

    // Signed documents - cloud function uploads, public can read
    match /signed-documents/{allPaths=**} {
      allow read: if true;  // Public access to download signed docs
      allow write: if true;  // Cloud function needs to write
      allow delete: if isAdmin();
    }

    // Vault documents - users can only access their own vault
    match /vaults/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
  }
}
